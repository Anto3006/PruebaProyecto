<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Planetario DAJAM</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-black">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Index">
                <img src="~/imagenes/LOGO2.png" width="150" height="80" />
                Planetario DAJAM

            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">
                            Inicio
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        @if (Request.IsAuthenticated)
                        {



                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink3" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Funcionarios
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark  bg-black" aria-labelledby="navbarDarkDropdownMenuLink3">
                                <li><a class="dropdown-item" href="/Funcionarios/ListaDeFuncionarios">Lista de funcionarios</a></li>
                                <li><a class="dropdown-item" href="/Estadisticas/Estadisticas">Estadísticas por días de la semana</a></li>
                                <li><a class="dropdown-item" href="/Estadisticas/EstadisticasCategoriaTopico">Estadísticas por categoría y tópico</a></li>
                                <li><a class="dropdown-item" href="/Estadisticas/EstadisticasIdiomasFuncionarios">Estadísticas idiomas funcionarios</a></li>
                                <li><a class="dropdown-item" href="/Actividad/CrearActividad">Crear actividad</a></li>
                                <li><a class="dropdown-item" href="/Actividad/AdministrarActividadesPendientes">Administrar actividades</a></li>
                                <li><a class="dropdown-item" href="/TelescopiadaPelicula/CrearTelescopiadaPelicula">Crear evento</a></li>
                                <li><a class="dropdown-item" href="/Noticias/CrearNoticia">Crear noticia</a></li>
                                <li><a class="dropdown-item" href="/Material/CrearMaterial">Crear material educativo</a></li>
                                <li><a class="dropdown-item" href="/Cuestionarios/CreacionCuestionario">Crear cuestionario</a></li>
                                <li><a class="dropdown-item" href="/Cuestionarios/AdministrarCuestionarios">Administrar cuestionarios</a></li>
                            </ul>
                        }
                        else
                        {
                            <a class="nav-link" href="/Funcionarios/ListaDeFuncionarios">Funcionarios</a>
                        }

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Planetario/InformacionHorarios">Ubicación</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Noticias/PaginaNoticias">Noticias</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Actividades
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark  bg-black" aria-labelledby="navbarDarkDropdownMenuLink">
                            <li><a class="dropdown-item" href="/Actividad/ListaCharlas">Charlas</a></li>
                            <li><a class="dropdown-item" href="/Actividad/ListaTalleres">Talleres</a></li>
                            <li><a class="dropdown-item" href="/Calendarios/Calendarios">Calendario de Eventos</a></li>
                            <li><a class="dropdown-item" href="/Material/RecuperarMateriales">Materiales educativos</a></li>

                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Preguntas/PreguntasFrecuentes">FAQ</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Materiales Educativos
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark  bg-black" aria-labelledby="navbarDarkDropdownMenuLink">
                            <li><a class="dropdown-item" href="/Material/RecuperarMateriales">Materiales Educativos</a></li>
                            <li><a class="dropdown-item" href="/Cuestionarios/PaginaPrincipal">Cuestionarios</a></li>
                        </ul>
                    </li>

                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink2" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-fw fa-user"></i> @Html.Encode(User.Identity.Name)
                                </a>

                            <ul class="dropdown-menu dropdown-menu-dark  bg-black" aria-labelledby="navbarDarkDropdownMenuLink2">
                                <li><a class="dropdown-item" href="/Login/Logout">Cerrar sesión</a></li>
                            </ul>


                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer id="footer">
        <div class="card-footer">
            <br />
            <div>
                <h4 style="color:aliceblue">REDES SOCIALES</h4>
                <a class="footer-link" style="color:ghostwhite" href="https://www.facebook.com/planetariodesanjose">Facebook</a>
                <a class="footer-link" style="color:ghostwhite" href="https://twitter.com/">Twitter</a>
                <a class="footer-link" style="color:ghostwhite" href="https://www.instagram.com/">Instagram</a>
                <p>
                    Creado por Grupo 1 Un Arbo PI
                </p>
                <a class="footer-link" style="color: #3B3838" href="/Login/Login">Iniciar sesión administrativa</a>
            </div>
            <br />
            <p>&copy; @DateTime.Now.Year </p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
    <script src="https://kit.fontawesome.com/6e14f316a3.js" crossorigin="anonymous"></script>
</body>
</html>
